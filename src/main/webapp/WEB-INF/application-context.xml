<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/tx 
http://www.springframework.org/schema/tx/spring-tx.xsd
http://www.springframework.org/schema/context 
http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- Define your application beans here. They will be available to the beans 
		defined in your web-context because it is a sub-context. Beans defined in 
		the web-context will not be available in the application context. -->

	<context:component-scan base-package="sk.stuba.fei.nemocnica" />

	<context:property-placeholder location="classpath*:META-INF/*.properties"/>
	
	<bean class="java.net.URI" id="dbUrl">
	    <constructor-arg value="#{systemEnvironment['DB_URL']}"/>
	</bean>
	
	<bean id="dataSource" class="org.apache.commons.dbcp2.BasicDataSource">
	    <property name="url" value="#{ 'jdbc:postgresql://' + @dbUrl.getHost() + ':' + @dbUrl.getPort() + @dbUrl.getPath() }"/>
	    <property name="username" value="#{ @dbUrl.getUserInfo().split(':')[0] }"/>
	    <property name="password" value="#{ @dbUrl.getUserInfo().split(':')[1] }"/>
	</bean>

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<property name="annotatedClasses">
			<list>
				<!-- List of annotated classes to store in DB -->
				<value>sk.stuba.fei.nemocnica.model.Zamestnanec</value>
				<value>sk.stuba.fei.nemocnica.model.Ambulancia</value>
				<value>sk.stuba.fei.nemocnica.model.Specializacia</value>
				<value>sk.stuba.fei.nemocnica.model.Zariadenie</value>
			</list>
		</property>
		<property name="dataSource" ref="dataSource" />
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.PostgreSQL9Dialect</prop>
				<prop key="hibernate.default_schema">public</prop>
				<prop key="show_sql">true</prop>
				<prop key="hibernate.hbm2ddl.auto">update</prop>
			</props>
		</property>
	</bean>

	<tx:annotation-driven />
	<bean id="transactionManager"
		class="org.springframework.orm.hibernate4.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	
	<!-- DAO Beans -->
	<bean id="zamestnanecDao" class="sk.stuba.fei.nemocnica.dao.ZamestnanecDAOImpl">
		<constructor-arg ref="sessionFactory" />
	</bean>

</beans>
